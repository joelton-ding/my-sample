{
  "name": "common",
  "version": "0.0.1",
  "description": "MOL boilerplate for writing Nodejs apps with ES6/7.",
  "author": "MOL Architect Team",
  "license": "MIT",
  "engines": {
    "node": ">=8.11.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.6.0"
  },
  "publishConfig": {
    "registry": "http://nexus.pm.bwoilmarine.com/repository/npm_hosted/"
  },
  "main": "lib/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production nodemon src/fmk/bin/www.js",
    "build": "rimraf lib && tsc && cross-env NODE_ENV=production babel src -d lib",
    "build:dev": "rimraf lib && tsc && cross-env NODE_ENV=development babel src -d lib -s",
    "dev": "concurrently --kill-others \"nodemon src/fmk/bin/www.js\" \"tsc -w --pretty\" ",
    "test": "cross-env NODE_ENV=test jest",
    "cover": "yarn test -- --coverage",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\"",
    "precommit": "lint-staged",
    "up": "yarn upgrade --latest",
    "setup": "yarn install && npm install -g typescript && concurrently \"tsc\" \"tsc -p sample/tsconfig.json\" "
  },
  "dependencies": {
    "@koa/cors": "2",
    "@types/node": "^10.1.2",
    "awilix": "^3.0.8",
    "awilix-koa": "^2.1.1",
    "axios": "^0.21.1",
    "babel-polyfill": "6.26.0",
    "babel-runtime": "6.26.0",
    "bristol": "^0.4.0",
    "browser-detect": "^0.2.28",
    "chalk": "^2.4.1",
    "decamelize": "^2.0.0",
    "fejl": "^1.0.2",
    "flow-runtime": "^0.17.0",
    "glob": "^7.1.2",
    "keyblade": "^0.3.2",
    "koa": "^2.5.1",
    "koa-body": "^4.0.3",
    "koa-bodyparser": "^4.2.1",
    "koa-mount": "^3.0.0",
    "koa-respond": "^1.0.1",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.3",
    "lodash": "^4.17.10",
    "mysql": "^2.15.0",
    "nodemailer": "^5.0.0",
    "properties": "^1.2.1",
    "public-ip": "^3.0.0",
    "reflect-metadata": "^0.1.12",
    "request-ip": "^2.1.3",
    "typeorm": "^0.2.6",
    "uuid": "^3.3.2",
    "yenv": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-flow-runtime": "^0.17.0",
    "babel-plugin-source-map-support": "^2.0.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.6",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.15.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.1.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "smid": "^0.1.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "eslintIgnore": [
    "src/entities"
  ],
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "verbose": false,
    "execMap": {
      "js": "babel-node"
    },
    "ignore": [
      "node_modules/*",
      "model/*",
      "src/entities/*",
      "sample/model/*",
      "sample/entities/*"
    ]
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "__tests__",
      "src/bin"
    ]
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread",
      "transform-decorators-legacy",
      "flow-runtime"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.11"
          }
        }
      ]
    ],
    "env": {
      "development": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": [
          "**/__tests__/**"
        ]
      }
    }
  }
}
