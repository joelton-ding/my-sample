    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jest Tests",
            "type": "node",
            "request": "launch",
            "env": {
                "NODE_ENV": "test"
            },
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "stopOnEntry": false,
            "args": [
                "-i"
            ],
            "console": "internalConsole",
            "sourceMaps": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}